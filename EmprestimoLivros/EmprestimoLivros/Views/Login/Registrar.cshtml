@model UsuarioRegisterDto

@{
    Layout = "_LayoutDeslogada";
}

@{
    ViewData["Title"] = "Cadastro";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container overflow-y-auto">
    <h1 class="mb-5">Cadastro de Usuário</h1>
    <form asp-action="Registrar" asp-controller="Login" method="post">
        <div class="mb-2">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" asp-for="Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" class="form-control" id="nome" asp-for="Nome"/>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label for="sobrenome" class="form-label">Sobrenome:</label>
            <input type="text" class="form-control" id="sobrenome" asp-for="Sobrenome"/>
            <span asp-validation-for="Sobrenome" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label for="senha" class="form-label">Senha:</label>
            <input type="password" class="form-control" id="senha" asp-for="Senha"/>
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label for="confirmaSenha" class="form-label">Confirma Senha:</label>
            <input type="password" class="form-control" id="confirmaSenha" asp-for="ConfirmaSenha"/>
            <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary w-25 mx-2">Cadastrar</button>
            <a asp-action="Login" asp-controller="Login" class="btn btn-primary w-25 mx-2">Voltar</a>
        </div>
    </form>
</div>

